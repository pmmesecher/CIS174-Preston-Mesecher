@model List<Contact>
@{
    ViewBag.Title = "My Contacts";
}

<h2>Contact List</h2>

<a asp-controller="Contact" asp-action="Add">Add New Contact</a>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Phone</th>
            <th>Address</th>
            <th>Note</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var contact in Model)
        {
            <tr>
                <td>@contact.Name</td>
                <td>@contact.Phone</td>
                <td>@contact.Address</td>
                <td>@contact.Note</td>
                <td>
                    <a asp-controller="Contact" asp-action="Edit"
                   asp-route-id="@contact.ContactId"
                   asp-route-id="@contact">Edit</a>
                    <a asp-controller="Contact" asp-action="Delete"
                   asp-route-id="@contact.ContactId"
                   asp-route-id="@contact">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>